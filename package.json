{
  "name": "kanby",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "22.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build -w @kanby/shared && concurrently -n shared,api,web -c magenta,cyan,green \"npm run dev -w packages/shared\" \"npm run dev -w apps/api\" \"npm run dev -w apps/web\"",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "dev:shared": "npm run dev -w packages/shared",
    "db:migrate": "npm run db:migrate -w apps/api",
    "db:seed": "npm run db:seed -w apps/api",
    "lint": "npm run lint -ws --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
